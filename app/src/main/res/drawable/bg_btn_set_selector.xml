<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#E63E60"
                android:endColor="#E63E60"
                android:centerColor="#E63E60"
                android:angle="90"
                android:centerX="0.4"
                android:centerY="0.4"
                android:type="linear"></gradient>
            <stroke android:color="#E63E60"
                android:width="3dp"></stroke>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#6e1e2e"
                android:endColor="#6e1e2e"
                android:centerColor="#6e1e2e"
                android:angle="90"
                android:centerX="0.4"
                android:centerY="0.4"
                android:type="linear"></gradient>
            <stroke android:color="#6e1e2e"
                android:width="3dp"></stroke>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
</selector>